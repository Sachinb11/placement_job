<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad_topbar"
    tools:context=".Model.Show_Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="3">

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:text="name"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:text="Location"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                android:padding="5dp"
                card_view:cardUseCompatPadding="true"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="Designation-"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/designation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:textColor="@color/darkgray"
                            android:text="Tester" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Description-"/>

                        <TextView
                            android:id="@+id/Description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:textColor="@color/darkgray"
                            android:text="udgsjhdgsjhdgsdghsgdhsgdhjsgdsgdjhsgdsgdjsdjsdhjsgdjsgdjhsgdjsgjdsg" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                android:padding="5dp"
                card_view:cardUseCompatPadding="true"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Skills -"/>

                        <TextView
                            android:id="@+id/Skills"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:textColor="@color/darkgray"
                            android:text="Tester" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Qualification"/>

                        <TextView
                            android:id="@+id/Qualification"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textColor="@color/darkgray"
                            android:text="Bsc.C.S"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Experience"/>

                        <TextView
                            android:id="@+id/Experience"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textColor="@color/darkgray"
                            android:text="2 - 5 years"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Location"/>

                        <TextView
                            android:id="@+id/Location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:textColor="@color/darkgray"
                            android:text="Palghar" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollbars="vertical"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="Date - "/>
                            <TextView
                                android:id="@+id/Date"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:scrollbars="vertical"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/darkgray"
                                android:text="20/02/20"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollbars="vertical"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="Time - "/>
                            <TextView
                                android:id="@+id/Time"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:scrollbars="vertical"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/darkgray"
                                android:text="20:20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Contact"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/Phone"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:scrollbars="vertical"
                                android:padding="5dp"
                                android:textColor="@color/darkgray"
                                android:text="Phone Number"/>

                            <TextView
                                android:id="@+id/Email"
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:scrollbars="vertical"
                                android:padding="5dp"
                                android:textColor="#006CB8"
                                android:text="Email"/>
                        </LinearLayout>>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>